{% extends 'base.html.twig' %}

{% block body %}
    <h1>Prestataires list</h1>

    <table>
        <thead>
            <tr>
                <th>Nom</th>
                <th>Tel</th>
                <th>Mail</th>
                <th>Adress</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for prestataire in prestataires %}
            <tr>
                <td><a href="{{ path('prestataire_show', { 'id': prestataire.id }) }}">{{ prestataire.nom }}</a></td>
                <td>{{ prestataire.tel }}</td>
                <td>{{ prestataire.mail }}</td>
                <td>{{ prestataire.adress }}</td>
                <td>{{ prestataire.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('prestataire_show', { 'id': prestataire.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('prestataire_edit', { 'id': prestataire.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('prestataire_new') }}">Create a new prestataire</a>
        </li>
    </ul>
{% endblock %}
